    android:id="@+id/cardTransaksi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:translationZ="4dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="1sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp">

            <TextView
                android:id="@+id/txtNamaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika"
                android:paddingStart="@dimen/_5sdp"
                android:text="Nama Barang"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/txtHargaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNamaBarang"
                android:fontFamily="@font/signika"
                android:paddingStart="@dimen/_5sdp"
                android:text="Rp. 999.999.999" />

            <TextView
                android:id="@+id/banyakBarang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/txtNamaBarang"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-7dp"
                android:fontFamily="@font/pt_sans"
                android:text="20 box 1 katyon"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/stat"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:tint="@color/design_default_color_primary"
                android:visibility="gone"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

